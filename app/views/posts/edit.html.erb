<h1> Edit Blog Post </h1>

<%= form_for @post do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <br><br>
  <p>Enter blog body in <a href="https://www.markdownguide.org/cheat-sheet/">Markdown</a></p>
  <%= f.label :body %> <br>
  <%= f.text_area :body %>
  <br> <br>
  <%= f.label :author %><br>
  <%= f.text_field :author %>
  <br><br>
  <%= f.submit %>

<% end %>
